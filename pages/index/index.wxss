/**index.wxss**/
page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #fff9f0;
}

.scrollarea {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.container {
  width: 100%;
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: env(safe-area-inset-bottom);
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 90%;
  max-width: 600rpx;
  margin: 0 auto;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: 0.5px solid rgba(0, 0, 0, 0.1);
  border-bottom: 0.5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

.container {
  padding: 0;
  margin: 0;
  width: 100%;
  padding-bottom: 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 搜索框样式 */
.search-box {
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 30rpx;
  margin-bottom: 20rpx;
}

.search-box input {
  height: 60rpx;
  font-size: 28rpx;
}

/* 轮播图样式 */
.banner {
  width: 100%;
  height: 400rpx;
  position: relative;
  margin: 0;
  overflow: hidden;
}

.banner-image {
  width: 100%;
  height: 100%;
  object-fit: cover; /* 确保图片填充整个容器 */
  display: block;
}

/* 自定义指示点样式 */
.wx-swiper-dots {
  position: absolute !important;
  bottom: 20rpx !important;
  left: 50% !important;
  transform: translateX(-50%) !important;
}

.wx-swiper-dots.wx-swiper-dots-horizontal {
  margin-bottom: 0;
}

/* 服务列表样式 */
.service-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.service-item {
  display: flex;
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.service-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.service-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.service-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.service-desc {
  font-size: 26rpx;
  color: #666;
  margin: 10rpx 0;
}

.service-price {
  display: flex;
  align-items: baseline;
}

.price {
  font-size: 34rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.unit {
  font-size: 24rpx;
  color: #999;
  margin-left: 4rpx;
}

/* 功能卡片样式 */
.function-card {
  margin: 20rpx auto;
  width: 92%;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

/* 卡片分区样式 */
.card-section {
  padding: 20rpx 16rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 100%;
  box-sizing: border-box;
}

/* 分割线 */
.divider {
  height: 2rpx;
  background-color: #f5f5f5;
  margin: 0 30rpx;
}

/* 导航项样式 */
.nav-item {
  width: calc(50% - 20rpx);
  min-height: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fff5e6;
  border-radius: 16rpx;
  padding: 20rpx;
  box-sizing: border-box;
  margin: 10rpx;
}

.nav-icon {
  width: 72rpx;
  height: 72rpx;
  margin-bottom: 16rpx;
}

/* 服务项样式 */
.service-item {
  width: 25%;
  height: auto;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.service-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 12rpx;
}

.service-item text {
  font-size: 26rpx;
  color: #333333;
}

/* 公告卡片样式 */
.notice-card {
  margin: 12rpx auto 0;
  width: 94%;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.notice-banner {
  width: 100%;
  height: 320rpx;
  object-fit: cover;
  display: block;
}

.notice-body {
  padding: 16rpx 20rpx; /* 增加内边距 */
}

.notice-title {
  font-size: 28rpx; /* 增大字号 */
  font-weight: bold;
  color: #333333;
  margin-bottom: 12rpx; /* 增加间距 */
}

.notice-content {
  font-size: 26rpx; /* 增大字号 */
  color: #666666;
  line-height: 1.6; /* 增加行高 */
  min-height: 80rpx; /* 设置最小高度 */
}

/* 介绍卡片样式 */
.intro-card {
  margin: 24rpx auto 0;
  width: 94%;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  padding: 16rpx 20rpx; /* 统一使用padding */
}

.intro-title {
  font-size: 28rpx; /* 增大字号 */
  font-weight: bold;
  color: #333333;
  margin-bottom: 12rpx;
}

.intro-content {
  font-size: 26rpx; /* 增大字号 */
  color: #666666;
  line-height: 1.6; /* 增加行高 */
  min-height: 80rpx; /* 设置最小高度 */
}
