.orders-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 88rpx 30rpx 30rpx;
  background: #fff;
}

.left {
  display: flex;
  align-items: center;
}

.back-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
  padding: 4rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.status-bar {
  display: flex;
  justify-content: space-around;
  background: #fff;
  padding: 20rpx 0;
  position: sticky;
  top: 0;
  z-index: 1;
}

.status-item {
  position: relative;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
}

.status-item.active {
  color: #1296db;
  font-weight: bold;
}

.status-line {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #1296db;
  border-radius: 2rpx;
}

.order-list {
  padding: 20rpx;
  height: calc(100vh - 200rpx);
}

.order-card {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  font-size: 24rpx;
}

.status-1 {
  color: #ff9800; /* 待处理 */
}

.status-2 {
  color: #1296db; /* 已确认 */
}

.status-3 {
  color: #4caf50; /* 已完成 */
}

.status-4 {
  color: #999; /* 已取消 */
}

.order-content {
  border-bottom: 2rpx solid #f5f5f5;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}

.service-info {
  margin-bottom: 16rpx;
}

.service-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.provider-name {
  font-size: 26rpx;
  color: #666;
}

.pet-info,
.schedule-info {
  display: flex;
  font-size: 26rpx;
  margin-bottom: 12rpx;
}

.label {
  color: #999;
  width: 140rpx;
}

.value {
  color: #666;
  flex: 1;
}

.price-info {
  text-align: right;
  margin-top: 16rpx;
}

.amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.order-footer {
  display: flex;
  justify-content: flex-end;
}

.order-actions {
  display: flex;
  gap: 20rpx;
  justify-content: flex-end;
}

.action-btn {
  font-size: 26rpx;
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  background: none;
  min-width: 140rpx;
  width: auto;
}

.action-btn::after {
  border: none;
}

.cancel {
  color: #666;
  border: 2rpx solid #ddd;
}

.detail {
  color: #1296db;
  border: 2rpx solid #1296db;
}

.loading-more,
.no-more {
  text-align: center;
  padding: 30rpx;
  font-size: 26rpx;
  color: #999;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-state text {
  color: #999;
  font-size: 28rpx;
}

.complete-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.service {
  color: #1296db;
  border: 2rpx solid #1296db;
}
