.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 头部样式 */
.chat-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #e5e5e5;
  position: relative;
  z-index: 10;
}

.header-left,
.header-right {
  width: 80rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-right {
  width: auto;
  padding: 0 10rpx;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

.clear-text {
  font-size: 28rpx;
  color: #007aff;
  padding: 10rpx 15rpx;
  background-color: rgba(0, 122, 255, 0.1);
  border-radius: 8rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

/* 消息列表样式 */
.message-list {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.message-item {
  margin-bottom: 30rpx;
  display: flex;
  align-items: flex-start;
}

.message-item.user {
  flex-direction: row-reverse;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 0 16rpx;
  background-color: #e0e0e0;
  border: 2rpx solid #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.message-content {
  max-width: 60%;
  padding: 20rpx;
  border-radius: 20rpx;
  position: relative;
}

.user .message-content {
  background-color: #007aff;
  color: #ffffff;
  border-top-right-radius: 4rpx;
  margin-right: 16rpx;
}

.ai .message-content {
  background-color: #ffffff;
  color: #333333;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  border-top-left-radius: 4rpx;
  margin-left: 16rpx;
}

.message-text {
  font-size: 28rpx;
  line-height: 1.5;
  word-wrap: break-word;
}

.message-time {
  font-size: 24rpx;
  color: #999999;
  margin-top: 10rpx;
  display: block;
}

.user .message-time {
  color: rgba(255, 255, 255, 0.8);
}

/* 输入区域样式 */
.input-area {
  display: flex;
  padding: 20rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #e5e5e5;
}

.input-area.disabled {
  opacity: 0.8;
}

.message-input {
  flex: 1;
  height: 72rpx;
  background-color: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.input-placeholder {
  color: #999999;
}

.send-btn {
  min-width: 120rpx;
  height: 72rpx;
  background-color: #007aff;
  color: #ffffff;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  padding: 0 25rpx;
  margin: 0;
  line-height: 1;
}

.send-btn.disabled {
  background-color: #cccccc;
}

.loading-icon {
  width: 36rpx;
  height: 36rpx;
  border: 4rpx solid #ffffff;
  border-radius: 50%;
  border-top-color: transparent;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
