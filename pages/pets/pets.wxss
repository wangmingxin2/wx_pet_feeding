.pets-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 30rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 88rpx 30rpx 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.left {
  display: flex;
  align-items: center;
}

.back-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
  padding: 4rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.add-btn {
  display: flex;
  align-items: center;
  background: none;
  color: #666;
  padding: 16rpx 0;
  font-size: 28rpx;
  border: none;
  margin-right: -10rpx;
}

.add-btn::after {
  border: none;
}

.add-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 6rpx;
}

.pets-list {
  margin-bottom: 30rpx;
}

.pet-card {
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.pet-info {
  display: flex;
  padding: 20rpx;
}

.pet-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
}

.pet-details {
  flex: 1;
}

.pet-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.pet-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.pet-age {
  font-size: 26rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.pet-row {
  display: flex;
  margin-bottom: 12rpx;
  font-size: 26rpx;
}

.label {
  color: #999;
  width: 100rpx;
}

.value {
  color: #666;
  flex: 1;
}

.pet-actions {
  display: flex;
  border-top: 2rpx solid #f5f5f5;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background: none;
  border: none;
  font-size: 26rpx;
}

.action-btn::after {
  border: none;
}

.btn-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.edit {
  color: #1296db;
  border-right: 2rpx solid #f5f5f5;
}

.delete {
  color: #ff6b6b;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-state text {
  color: #999;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.add-pet-btn {
  background: #1296db;
  color: #fff;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}
