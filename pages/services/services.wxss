/* pages/services/services.wxss */
.services-page {
  min-height: 100vh;
  background-color: #fff;
  padding: 40rpx 30rpx;
}

.header {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.service-list {
  display: flex;
  flex-wrap: wrap;
  gap: 40rpx;
  justify-content: flex-start;
}

.service-card {
  width: calc((100% - 80rpx) / 3);
  background-color: #fff7e6;
  border-radius: 16rpx;
  padding: 30rpx;
  height: 280rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  gap: 30rpx;
}

.service-icon {
  width: 140rpx;
  height: 140;
  margin-bottom: 0;
}

.service-name {
  font-size: 28rpx;
  color: #333;
  text-align: center;
}

.service-price,
.price,
.unit,
.service-desc {
  display: none;
}

.empty-state {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 26rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-state text {
  color: #999;
  font-size: 28rpx;
}
