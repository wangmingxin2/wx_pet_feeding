.login-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-container {
  width: 80%;
  max-width: 600rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.login-logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.login-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.login-content {
  text-align: center;
}

.login-desc {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 30rpx;
  line-height: 1.5;
}

.login-btn {
  width: 100% !important;
  height: 88rpx;
  line-height: 88rpx;
  background: #07c160;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: none;
  margin: 0;
}

.login-btn::after {
  border: none;
}

.login-btn[loading] {
  opacity: 0.9;
  color: #ffffff !important;
}